<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/dummy"
        android:layout_gravity="center_vertical"
        app:civ_border_color="@color/md_grey_200"
        app:civ_border_width="1dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aliza Smith"
                android:layout_gravity="center_vertical"
                android:textColor="@color/md_black_1000"
                android:textSize="14dp"
                android:maxLines="1"
                android:fontFamily="@font/p_regular"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.1"
                android:textColor="@color/md_green_600"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_green"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plumber"
            android:padding="2dp"
            android:textSize="12dp"
            android:maxLines="1"
            android:visibility="gone"
            android:fontFamily="@font/p_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rs 200 / hour"
                android:textSize="12dp"
                android:padding="2dp"
                android:maxLines="1"
                android:fontFamily="@font/p_light"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 2.0 kms away"
                android:textSize="10dp"
                android:maxLines="1"
                android:fontFamily="@font/p_light"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"/>
        </LinearLayout>



    </LinearLayout>


