<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/dummy"
        app:civ_border_color="@color/md_black_1000"
        app:civ_border_width="1dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:drawableRight="@drawable/ic_star_green"
        android:textColor="@color/md_green_600"
        android:layout_alignParentRight="true"
        android:textSize="16dp"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sachin Tendulkar"
            android:fontFamily="@font/p_regular"
            android:textColor="@color/md_black_1000"
            android:textSize="14dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="taken on December 16,2020"
            android:fontFamily="@font/p_light"
            android:textColor="@color/md_black_1000"
            android:textSize="12dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummytxt"
            android:fontFamily="@font/p_light"
            android:textColor="@color/md_black_1000"
            android:textSize="12dp"
            android:maxLines="3"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</RelativeLayout>